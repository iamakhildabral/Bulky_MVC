@model List<Category>
<h1>
    Welcome to the Category List
</h1>

<table class="table table-bordered table-striped w-auto">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>
                Id
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model.OrderByDescending(u=>u.Name))
        {
            <tr>
                <td>
                    @obj.Id
                </td>
                <td>
                    @obj.Name
                </td>
                <td>
                    @obj.DisplayOrder
                </td>
            </tr>
        }
        
    </tbody>
    
</table>