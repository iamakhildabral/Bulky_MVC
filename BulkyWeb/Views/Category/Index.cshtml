@model List<Category>
<h1>
    Welcome to the Category List
</h1>



<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>

        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-tags-fill"></i>New Category
            </a>
        </div>
    </div>


<table class="table table-bordered table-striped ">
    <thead>
        <tr>
            <th>
                    <b>NAME</b>
            </th>
            <th>
                    <b>DISPLAY ORDER</b>
            </th>
            
            
        </tr>
    </thead>

    <tbody>
        @foreach(var obj in Model.OrderByDescending(u=>u.Name))
        {
            <tr>
                <td>
                    @obj.Name
                </td>
                <td>
                    @obj.DisplayOrder
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-contoller="Category" asp-action="Edit" asp-route-categoryid="@obj.Id" class="btn btn-primary mx-2" >
                                <i class="bi bi-pencil-square">Edit</i>
                        </a>
                            <a asp-contoller="Category" asp-action="Delete" asp-route-categoryid="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3-fill">Delete</i>
                        </a>
                    </div>
                </td>
                <td>
                        
                </td>
                
            </tr>

        }
       
        
    </tbody>
    
</table>

</div>